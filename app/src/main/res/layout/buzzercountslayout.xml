<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Player Count"
        android:id="@+id/twoPlayerCountButton"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/threePlayerCountButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Player count"
        android:id="@+id/threePlayerCountButton"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Player count"
        android:id="@+id/fourPlayerCountButton"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/threePlayerCountButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
