<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:onClick="sendAction">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email Stats to:"
        android:id="@+id/EmailStatsTo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="116dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EmailTextBox"
        android:layout_alignBottom="@+id/emailText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="email:"
        android:id="@+id/emailText"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/EmailStatsTo"
        android:layout_alignStart="@+id/EmailStatsTo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendButton"
        android:layout_marginEnd="36dp"
        android:layout_below="@+id/EmailTextBox"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"/>
</RelativeLayout>
