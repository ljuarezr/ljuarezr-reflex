<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Instructions:"
        android:id="@+id/InstructiuonsTitleView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="99dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click the screen as fast as you possible can after you see the prompt &quot;Click!&quot;. "
        android:id="@+id/InstructionsDescriptionView"
        android:layout_below="@+id/InstructiuonsTitleView"
        android:layout_marginTop="37dp"
        android:layout_alignStart="@+id/InstructiuonsTitleView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/PlayButton"
        android:layout_below="@+id/InstructionsDescriptionView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp" />
</RelativeLayout>
